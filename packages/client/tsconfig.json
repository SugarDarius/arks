{
    "compilerOptions": {
        "baseUrl": "./",
        "strict": true,
        "module": "commonjs",
        "target": "es5",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "lib":  ["dom"],
        "jsx": "react"
    },
    "include": [
        "*.ts",
        "*.tsx",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [ "../node_modules" ]
}