{
    "version": "1.0.0",
    "npmClient": "npm",
    "packages": [
        "packages/*"
    ],
    "command": {
        "version": {
            "allowBranch": "master",
            "changelogPreset": "angular"
        },
        "publish": {
            "ignoreChanges": [ "*.md" ],
            "message": "build(@arks): publish release %s",
            "registry": "https://registry.npmjs.org/"
        }
    }
}